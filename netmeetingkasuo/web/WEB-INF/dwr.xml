<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN" "http://getahead.org/dwr/dwr30.dtd">

<dwr>
	<allow>
		<convert match="java.lang.Exception" converter="exception">
			<param name="include" value="message" />
		</convert>
		<convert converter="bean" match="java.lang.StackTraceElement" />

		<create creator="new" javascript="IndexService">
			<param name="class" value="com.meeting.service.dwr.IndexService" />
		</create>

		<create creator="new" javascript="UserListService">
			<param name="class" value="com.meeting.service.dwr.UserListService" />
		</create>

		<create creator="new" javascript="ChatService">
			<param name="class" value="com.meeting.service.dwr.ChatService" />
		</create>

		<create creator="new" javascript="DocumentService">
			<param name="class" value="com.meeting.service.dwr.DocumentService" />
		</create>

		<create creator="new" javascript="WhiteBoardService">
			<param name="class" value="com.meeting.service.dwr.WhiteBoardService" />
		</create>

		<create creator="new" javascript="DesktopShareService">
			<param name="class" value="com.meeting.service.dwr.DesktopShareService" />
		</create>

		<create creator="new" javascript="DesktopControlService">
			<param name="class" value="com.meeting.service.dwr.DesktopControlService" />
		</create>

		<create creator="new" javascript="DocumentDispatchService">
			<param name="class" value="com.meeting.service.dwr.DocumentDispatchService" />
		</create>

		<create creator="new" javascript="VideoPlayService">
			<param name="class" value="com.meeting.service.dwr.VideoPlayService" />
		</create>

		<create creator="new" javascript="VideoShareService">
			<param name="class" value="com.meeting.service.dwr.VideoShareService" />
		</create>
		
		<create creator="new" javascript="AudioShareService">
            <param name="class" value="com.meeting.service.dwr.AudioShareService" />
        </create>
        
        <create creator="new" javascript="DocumentWhiteBoardService">
            <param name="class" value="com.meeting.service.dwr.DocumentWhiteBoardService" />
        </create>

		<convert converter="bean" match="com.meeting.model.FileModel" />
		<convert converter="bean" match="com.meeting.model.FileUserModel" />
		<convert converter="bean" match="com.meeting.model.MeetingModel" />
		<convert converter="bean" match="com.meeting.model.UserModel" />
		<convert converter="bean" match="com.meeting.model.VideoModel" />
		<convert converter="bean" match="com.meeting.model.VideoUserModel" />
	</allow>
</dwr>
